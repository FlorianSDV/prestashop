{
  "name": "@myparcel/prestashop-module",
  "version": "2.0.0-alpha.0",
  "private": true,
  "repository": "github:myparcelnl/prestashop",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "views/js/**/*"
  ],
  "scripts": {
    "build": "yarn build:js && yarn translations:import && pdk-builder build",
    "build:js": "nx run-many --output-style=stream --target=build --runner=cloud",
    "build:js:dev": "nx run-many --output-style=stream --target=build:dev",
    "build:js:dev:backend": "yarn build:js:dev --projects='backend-*'",
    "build:js:dev:frontend": "yarn build:js:dev --projects='frontend-*'",
    "prepare": "is-ci || husky install",
    "test": "nx run-many --output-style=stream --target=test",
    "test:watch": "nx run-many --output-style=stream --target=test:watch",
    "translations:import": "yarn pdk-builder translations",
    "watch": "yarn build:js:dev --parallel=99 -- --watch",
    "watch:backend": "yarn build:js:dev:backend --parallel=99 -- --watch",
    "watch:frontend": "yarn build:js:dev:frontend --parallel=99 -- --watch",
    "ws:build": "vite build",
    "ws:build:dev": "vite build --mode development",
    "ws:dev": "vite",
    "ws:test": "vitest run",
    "ws:test:watch": "vitest"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,vue}": "eslint --fix",
    "*.{md,html,json,html,yml}": "prettier --write",
    "package.json": "npx -q sort-package-json"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": "@myparcel/prettier-config",
  "devDependencies": {
    "@edielemoine/google-docs-importer": "^1.0.2",
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-import": "^1.0.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "@myparcel-pdk/app-builder": "^1.0.0-alpha.9",
    "@myparcel/semantic-release-config": "^5.0.0",
    "@types/node": "^18.13.0",
    "@vue/tsconfig": "^0.3.2",
    "eslint": "^8.44.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.2",
    "nx": "^16.1.2",
    "nx-cloud": "latest",
    "prettier": "^2.8.8"
  },
  "packageManager": "yarn@3.3.0",
  "volta": {
    "node": "18.16.1"
  }
}
